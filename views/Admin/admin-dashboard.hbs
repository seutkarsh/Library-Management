<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1">
    <title>Document</title>
    <link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">

    <link rel="stylesheet" href="/public/css/app.css">
</head>

<body>
    <input type="checkbox" id="nav-toggle">
    <div class="sidebar">
        <div class="sidebar-brand">
            <h2><a href="/admin">
                    <span> <img src="/public/Images/logo-png.png" alt="" /></span>

                    <span>Boeken BookHouse</span> </a></h2>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a href="/admin" class="active">
                        <span class="las la-igloo"></span>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/member">
                        <span class="las la-users"></span>
                        <span>Members</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/attendance">
                        <span class="las la-id-card"></span>
                        <span>Attendance</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/books">
                        <span class="las la-book-reader"></span>
                        <span>Books</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-content">
        <header>
            <h2>
                <label for="nav-toggle">
                    <span class='las la-bars'></span>
                </label>
                Dashboard
            </h2>
            {{!-- <div class="search-wrapper">
                <span class="las la-search"></span>
                <input type="search" placeholder="Search Here" />
            </div> --}}
            <div class="logout-wrapper">

                <a href="/logout"><h3><span class="las la-power-off"></span>LogOut</h3></a>
            </div>

        </header>

        <main class="dashboard">
            <div class="cards">
                <div class="card-single">
                    <div>
                        <h1>{{members}}</h1>
                        <span>Members</span>
                    </div>
                    <div>
                        <span class="las la-users"></span>
                    </div>
                </div>


                <div class="card-single">
                    <div>
                        <h1>{{present}}</h1>
                        <span>Present Now</span>
                    </div>
                    <div>
                        <span class="las la-hand-paper"></span>
                    </div>
                </div>

                <div class="card-single">
                    <div>
                        <h1>{{books}}</h1>
                        <span>Total Books</span>
                    </div>
                    <div>
                        <span class="las la-dungeon"></span>
                    </div>
                </div>

            </div>

            <div class="recent-grid">
                <div class="new-arrivals">
                    <div class="card">
                        <div class="card-header">
                            <h3>New Arrivals</h3>
                            <a href="/admin/books/view"><button>See all <span class="las la-arrow-right">
                                    </span></button>
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table width=100% class="tables">
                                    <thead>
                                        <td>Book Title</td>
                                        <td>Author</td>
                                        <td>Genre</td>
                                        <td>Copies</td>
                                    </thead>

                                    <tbody>
                                        {{#each data1}}
                                        <tr>
                                            <td>{{this.book_name}}</td>
                                            <td>{{this.author}}</td>
                                            <td>{{this.genre}}</td>
                                            <td>{{this.copies}}</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="member-lists">
                    <div class="card">
                        <div class="card-header">
                            <h3>New Members</h3>
                            <a href="/admin/member/view"><button>See all <span class="las la-arrow-right">
                                    </span></button>
                            </a>
                        </div>
                        {{#each data2}}
                        <div class="card-body">
                            <div class="member-list">
                                <div class="info">
                                    <div>
                                        <img src="/uploads/{{this.profile_pic}}" alt="">
                                    </div>
                                    <div class="details">
                                        <h4>{{this.first_name}} {{this.last_name}}</h4>
                                            <small>ID : {{this.member_id}}</small>
                                            <small>{{this.email}}</small>


                                    </div>
                                </div>
                                <div class="contact">
                                    <div class="tooltip">
                                        <span class="las la-phone"></span><span class="tooltiptext">{{this.contact}}</span>
                                    </div>
                                </div>



                            </div>
                        </div>
                        {{/each}}
                    </div>

                </div>
            </div>
        </main>
    </div>

</body>

</html>