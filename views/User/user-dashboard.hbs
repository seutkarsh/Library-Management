<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1">
    <title>Document</title>
    <link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">

    <link rel="stylesheet" href="/public/css/app.css">
</head>

<body>
    <input type="checkbox" id="nav-toggle">
    <div class="sidebar">
        <div class="sidebar-brand">
            <h2><a href="/user">
                    <span> <img src="/public/Images/logo-png.png" alt="" /></span>

                    <span>Boeken BookHouse</span> </a></h2>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a href="/user" class="active">
                        <span class="las la-igloo"></span>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="/user/booksavailable">
                        <span class="las la-book-reader"></span>
                        <span>Books Available</span>
                    </a>
                </li>
                <li>
                    <a href="/user/books-under-me">
                        <span class="las la-book-open"></span>
                        <span>Books Under Me</span>
                    </a>
                </li>
                <li>
                    <a href="/user/bookrequest">
                        <span class="las la-book"></span>
                        <span>Request Books</span>
                    </a>
                </li>
                <li>
                    <a href="/user/profile">
                        <span class="las la-user"></span>
                        <span>Profile</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-content">
        <header>
            <h2>
                <label for="nav-toggle">
                    <span class='las la-bars'></span>
                </label>
                Dashboard
            </h2>
            <div class="logout-wrapper">

                <a href="/logout"><h3><span class="las la-power-off"></span>LogOut</h3></a>
            </div>

        </header>

        <main class="dashboard">
            <div class="user-cards">
                <div class="card-single">
                    <div>
                        <h1>{{books_under_me}}</h1>
                        <span>Books Under me</span>
                    </div>
                    <div>
                        <span class="las la-book-open"></span>
                    </div>
                </div>


                <div class="card-single">
                    <div>
                        <h1></span>{{fine}}</h1>
                        <span>Fine</span>
                    </div>
                    <div>
                        <span class="las la-rupee-sign"></span>
                    </div>
                </div>

                <div class="card-single">
                    <div>
                        <h1>{{days}} Days </h1>
                        <span>Subscription Ends In</span>
                    </div>
                    <div>
                        <span class="las la-clock"></span>
                    </div>
                </div>

            </div>

            <div class="recent-grid-user">
                <div class="new-arrivals">
                    <div class="card">
                        <div class="card-header">
                            <h3>New Arrivals</h3>
                            <!-- <button>See all <span class="las la-arrow-right">
                                </span></button> -->
                        </div>
                        <div class="card-body">
                            <div class="table-responsive ">
                                <table width=100% class="tables">
                                    <thead>
                                        <td>Book Title</td>
                                        <td>Author</td>
                                        <td>Genre</td>
                                        <td>Copies</td>
                                    </thead>
                                    {{#each data2}}
                                    <tr>
                                        <td>{{this.book_name}}</td>
                                        <td>{{this.author}}</td>
                                        <td>{{this.genre}}</td>
                                        <td>{{this.copies}}</td>
                                    </tr>
                                    {{/each}}

                                    <tbody>

                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="request-status">
                    <div class="card">
                        <div class="card-header">
                            <h3>Request Status</h3>
                            <!-- <button>See all <span class="las la-arrow-right">
                                </span></button> -->
                        </div>
                        <div class="card-body">
                            <div class="table-responsive " >
                                <table width=100% class="tables">
                                    <thead>
                                        <td>Book Title</td>
                                        <td>Author</td>
                                        <td>Language</td>
                                        <td>Edition</td>
                                        <td>Responce</td>
                                    </thead>

                                    <tbody>
                                        {{#each data1}}
                                        <tr>
                                            <td>{{this.name}}</td>
                                            <td>{{this.author}}</td>
                                            <td>{{this.language}}</td>
                                            <td>{{this.edition}}</td>
                                            <td>{{this.response_by_admin}}</td>   
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </main>
    </div>
   

</body>

</html>